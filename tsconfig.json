{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "models/Products.ts", "pages/api/auth/[...nextauth].ts", "components/IndividualProductPage", "components/Paypal/Paypal.jsx"],
  "exclude": ["node_modules"]
}
